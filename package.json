{
  "name": "curtains-extension",
  "version": "1.0.0",
  "description": "Block distracting websites with a peaceful curtain overlay. Get motivated, stay focused, and control your browsing time.",
  "main": "dist/manifest.json",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "package": "npm run build && cd dist && zip -r ../curtains-v1.0.0.zip . && cd .. && echo 'Package created: curtains-v1.0.0.zip'",
    "lint": "biome check src/",
    "lint:fix": "biome check --write src/",
    "format": "biome format --write src/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JeromeGsq/curtains-extension.git"
  },
  "keywords": [
    "chrome-extension",
    "productivity",
    "focus",
    "website-blocker",
    "distraction-blocker"
  ],
  "author": "JeromeGsq",
  "license": "ISC",
  "type": "module",
  "bugs": {
    "url": "https://github.com/JeromeGsq/curtains-extension/issues"
  },
  "homepage": "https://github.com/JeromeGsq/curtains-extension#readme",
  "devDependencies": {
    "@biomejs/biome": "^2.2.5",
    "@crxjs/vite-plugin": "^2.2.0",
    "@types/chrome": "^0.1.22",
    "typescript": "^5.9.3",
    "vite": "^7.1.9"
  }
}