{
  "manifest_version": 3,
  "name": "Curtains - Focus & Block Distractions",
  "version": "1.0.0",
  "description": "Block distracting websites with a peaceful curtain overlay. Get motivated, stay focused, and control your browsing time.",
  "author": "Jerome Gasquez",
  "homepage_url": "https://github.com/JeromeGsq/curtains-extension",
  "permissions": ["storage", "activeTab", "tabs"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "src/service_worker.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.ts"],
      "run_at": "document_start",
      "all_frames": false
    }
  ],
  "commands": {
    "toggle-curtain": {
      "suggested_key": {
        "default": "Ctrl+Shift+H",
        "mac": "Command+Shift+H"
      },
      "description": "Toggle curtain overlay"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/visible-48.png", "icons/hidden-48.png"],
      "matches": ["<all_urls>"]
    }
  ]
}
